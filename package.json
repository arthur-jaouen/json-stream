{
    "name": "@ja-ja/json-stream",
    "version": "0.0.3",
    "description": "",
    "author": "Arthur Jaouen",
    "license": "MIT",
    "type": "module",
    "types": "./dist/json-stream.d.ts",
    "exports": {
        "script": "./dist/json-stream.min.js",
        "default": "./dist/json-stream.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build-ts": "tsc",
        "build-bundle": "webpack --mode production",
        "build": "rm -rf dist/* && yarn run build-ts && yarn run build-bundle",
        "dev-ts": "tsc --watch",
        "dev-bundle": "webpack --watch --mode development",
        "dev": "concurrently 'yarn:dev-ts' 'yarn:dev-bundle'",
        "doc": "typedoc src/json-stream.ts",
        "test": "jest",
        "coverage": "jest --coverage",
        "prepack": "yarn run test && yarn run build && yarn run doc"
    },
    "browserslist": [
        "defaults"
    ],
    "jest": {
        "testEnvironment": "node",
        "testRegex": "/src/.*\\.test\\.ts$",
        "coverageDirectory": "./build/coverage",
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "printWidth": 100
    },
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@babel/preset-env": "^7.15.6",
        "@tsconfig/node16": "^1.0.1",
        "@types/jest": "^27.0.2",
        "babel-loader": "^8.2.2",
        "browserslist": "^4.17.1",
        "concurrently": "^6.2.1",
        "core-js": "^3.18.0",
        "jest": "^27.2.1",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.5",
        "tslib": "^2.3.1",
        "typedoc": "^0.22.4",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    }
}
